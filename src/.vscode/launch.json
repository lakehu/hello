    "version": "0.2.0",    
    "configurations": [        
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",  //attch will use pid, do not use it. 
            "program": "${workspaceFolder}/hello", 
            "args": [],
            "stopAtEntry": false,    //// false/Mandatory for gdb debugging, stop at breakpoint or gdb connect/entry!!
            "cwd": "${workspaceRoot}",
            "environment": [],
            "launchCompleteCommand": "exec-continue", //attach mode, no stop 
            "externalConsole": false,       ///  false/Mandatory for gdb debugging!!!

            "logging": {/////  added manually for log
                "moduleLoad": true,
                //"trace": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true,
                //"traceResponse": true
            },
            "MIMode": "gdb", 
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                    //"set follow-fork-mode":"child"
                },
                {
                "description": "set target-async on",
                "text": "set target-async on",                
                "ignoreFailures": true,
                },                
                {
                    "description": "set  pagination  off",
                    "text": "set  pagination  off",                
                    "ignoreFailures": true,
                }, 
                {
                    "description": "set  non-stop  on",
                    "text": "set  non-stop  on",                
                    "ignoreFailures": true,
                },
            ],
            "preLaunchTask": "Build and run",   ///start gdbserver in backgroud 
            ///"preLaunchTask": "build",
            "miDebuggerPath": "/home/lhu3/usr/local/kreatv/toolchain/arm23/2.0.3/bin/aarch64-kreatv-linux-gnu-gdb",
            "miDebuggerServerAddress": "10.213.7.79:1234",
            "targetArchitecture": "arm",
            "sourceFileMap": {"./":"/home/lhu3/extra/source/Hello/src"}
            }
    ]
}
